# File managed by Puppet
if [ -d <%= scope.lookupvar('glassfish::glassfish_dir') %>/glassfish/bin ]; then
	PATH=$PATH:<%= scope.lookupvar('glassfish::glassfish_dir') %>/glassfish/bin
fi

if [ -f /usr/bin/less ]; then
    export PAGER="/usr/bin/less -ins"
elif [ -f /usr/bin/more ]; then
    export PAGER="/usr/bin/more -s"
fi

#
# Define default prompt to <username>@<hostname>:<path><"($|#) ">
# and print '#' for user "root" and '$' for normal users.
#
# Currently this is only done for bash/pfbash(1).
#

case ${SHELL} in
*bash)
    typeset +x PS1="\u@\h:\w\\$ "
    ;;
esac
