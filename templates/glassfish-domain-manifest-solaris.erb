<?xml version='1.0'?>
<!DOCTYPE service_bundle SYSTEM '/usr/share/lib/xml/dtd/service_bundle.dtd.1'>
<service_bundle type='manifest' name='export'>
  <service name='site/glassfish/<%= scope.lookupvar('glassfish::glassfish_version') %>' type='service' version='0'>
    <dependency name='network' grouping='require_all' restart_on='error' type='service'>
      <service_fmri value='svc:/system/filesystem/local:default'/>
      <service_fmri value='svc:/system/filesystem/autofs:default'/>
      <service_fmri value='svc:/milestone/network:default'/>
      <service_fmri value='svc:site/glassfish/derby'/>
    </dependency>
    <method_context project=':default' resource_pool=':default' working_directory='/tmp'>
      <method_credential group='admin' limit_privileges=':default' privileges='basic,net_privaddr' supp_groups=':default' user='whssadm'/>
      <method_environment>
        <envvar name='PATH' value='/opt/glassfish/currentversion/bin:/usr/jdk/instances/jdk1.7.0/bin:/usr/bin:/usr/sbin'/>
        <envvar name='JAVA_HOME' value='/usr/jdk/instances/jdk1.7.0'/>
      </method_environment>
    </method_context>
    <exec_method name='start' type='method' exec='/opt/glassfish/currentversion/bin/asadmin start-domain hss' timeout_seconds='60'>
      <method_context/>
    </exec_method>
    <exec_method name='stop' type='method' exec='/opt/glassfish/currentversion/bin/asadmin stop-domain hss' timeout_seconds='180'>
      <method_context/>
    </exec_method>
    <property_group name='general' type='framework'>
      <propval name='action_authorization' type='astring' value='solaris.smf.manage.glassfish'/>
      <propval name='value_authorization' type='astring' value='solaris.smf.manage.glassfish'/>
    </property_group>
    <instance name='default' enabled='false'>
      <property_group name='general' type='framework'>
        <propval name='package' type='astring' value='HSSglassfish'/>
      </property_group>
    </instance>
    <stability value='Stable'/>
    <template>
      <common_name>
        <loctext xml:lang='C'>Application - Glassfish</loctext>
      </common_name>
      <documentation>
        <doc_link name='glassfish' uri='http://glassfish.java.net/public/getstarted.html'/>
      </documentation>
    </template>
  </service>
</service_bundle>